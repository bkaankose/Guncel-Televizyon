    <Grid x:Name="mainGrid" Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <MediaElement x:Name="StreamElement" CurrentStateChanged="StreamElement_CurrentStateChanged" MediaFailed="StreamElement_MediaFailed" BufferingProgressChanged="StreamElement_BufferingProgressChanged" Volume="{Binding Volume,Mode=OneWay,Converter={StaticResource volumeConverter}}"/>
        <Notification:SfBusyIndicator x:Name="midProgress" Content="Kanal Yükleniyor ..." VerticalAlignment="Center" Grid.Row="1" IsBusy="True" AnimationType="HorizontalPulsingBox" HorizontalAlignment="Center" FontSize="24" FontFamily="Fonts/CaviarDreams.ttf#Caviar Dreams" Height="90.6"/>
        <ScrollViewer x:Name="streamMenu" HorizontalAlignment="Left" Width="275" RenderTransformOrigin="0.5,0.5" Opacity="0" Background="#B2000000">
            <ItemsControl x:Name="programGrid" ItemsSource="{Binding AllCurrentStreams}" Margin="10,10,0,10">
                <ItemsControl.ItemContainerTransitions>
                    <TransitionCollection>
                        <AddDeleteThemeTransition/>
                    </TransitionCollection>
                </ItemsControl.ItemContainerTransitions>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <TextBlock FontFamily="Segoe UI Symbol" Text="&#xE1F5;" Foreground="#FF22454B" />
                            <TextBlock Margin="10,4,0,0" Grid.Column="1" FontSize="13" Foreground="White" FontFamily="Fonts/CaviarDreams.ttf#Caviar Dreams" VerticalAlignment="Center" HorizontalAlignment="Left" TextWrapping="Wrap" TextTrimming="WordEllipsis">
        						<Run Text="{Binding streamTime}" />
        						<Run Text=" - " />
        						<Run Text="{Binding streamName}" />
                            </TextBlock>
                        </Grid>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
        <Grid x:Name="channelControlGrid" HorizontalAlignment="Right" Visibility="Collapsed" RenderTransformOrigin="0.5,0.5">
            <Grid.RenderTransform>
                <CompositeTransform/>
            </Grid.RenderTransform>
            <ListView x:Name="channelChangeList" ItemsSource="{Binding Source={StaticResource cvs}}" HorizontalAlignment="Right" Width="300" SelectionMode="None" IsItemClickEnabled="True" Background="#CC000000" ItemClick="channelChangeList_ItemClick">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Grid Width="300" Height="60" Background="#FF03A678">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Image Width="65" Margin="10,5" Height="50" Source="{Binding channelImage}" Stretch="Uniform" VerticalAlignment="Center" HorizontalAlignment="Center" />
                            <TextBlock Foreground="White" FontSize="18" FontFamily="Segoe UI Light" Text="{Binding Name}" VerticalAlignment="Center" HorizontalAlignment="Stretch"  Grid.Column="1" TextAlignment="Left" TextTrimming="WordEllipsis" TextWrapping="Wrap"/>
                        </Grid>
                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemsPanel>
                    <ItemsPanelTemplate>
                        <VirtualizingStackPanel >
                            <VirtualizingStackPanel.ChildrenTransitions>
                                <TransitionCollection>
                                    <EntranceThemeTransition
                            FromHorizontalOffset="400" />
                                </TransitionCollection>
                            </VirtualizingStackPanel.ChildrenTransitions>
                        </VirtualizingStackPanel>
                    </ItemsPanelTemplate>
                </ListView.ItemsPanel>
                <ListView.GroupStyle>
                    <GroupStyle>
                        <GroupStyle.HeaderTemplate>
                            <DataTemplate>
                                <StackPanel Margin="20,0" Orientation="Horizontal">
                                    <Image Width="50" Height="50" Source="{Binding Key, Converter={StaticResource categoryToIcon}}"  Stretch="Uniform" />
                                    <TextBlock Text="{Binding Key}" FontFamily="Fonts/Corbert-Regular.otf#Corbert" FontSize="20"  Foreground="#FF326779" VerticalAlignment="Center" />
                                </StackPanel>
                            </DataTemplate>
                        </GroupStyle.HeaderTemplate>
                        <GroupStyle.Panel>
                            <ItemsPanelTemplate>
                                <VariableSizedWrapGrid Margin="20" Orientation="Vertical" />
                            </ItemsPanelTemplate>
                        </GroupStyle.Panel>
                    </GroupStyle>
                </ListView.GroupStyle>
            </ListView>
        </Grid>
    </Grid>
</Page>

